{
    "manifest_version": 3,
    "name": "InboxGuard",
    "version": "1.0",
    "description": "AI-powered phishing email analyzer using Gemini AI.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["http://localhost:5000/*"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  